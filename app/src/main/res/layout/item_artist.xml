<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_artist"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:layout_margin="4dp"
    android:background="@color/colorDisableBackground">

    <am.leon.LeonImageView
        android:id="@+id/img_artist"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_margin="4dp"
        tools:src="@tools:sample/avatars" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_artistName"
        style="@style/TextView.Paragraph.Colored"
        android:maxLines="2"
        android:padding="4dp"
        android:textAlignment="center"
        tools:text="@string/app_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_followersCount"
        style="@style/TextView.Paragraph"
        android:maxLines="1"
        android:padding="4dp"
        android:textAlignment="center"
        android:drawableStart="@drawable/ic_followers"
        android:drawablePadding="4dp"
        tools:text="@string/app_name" />

</LinearLayout>